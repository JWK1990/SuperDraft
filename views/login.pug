extends layout

block content
  .main.container.text-xs-center
    #myModal.modal(style="display: block")
        span.close Ã—
        .login-form#modalLogin
          form(method="post" action="/login")
            h2.text-center(style="color: rgb(0,0,0)") LOG IN
           - if (loginText && loginText.length > 0)
            .alert.alert-danger#loginError(style="text-align: center") #{loginText}
            .text-center.social-btn
              a.btn.btn-primary.btn-block(href='/auth/facebook')
                i.fa.fa-facebook
                |  Login with 
                b Facebook
              a.btn.btn-info.btn-block(href='#')
                i.fa.fa-twitter
                |  Login with 
                b Twitter
              a.btn.btn-danger.btn-block(href='#')
                i.fa.fa-google
                |  Login with 
                b Google           
            .or-seperator(style="color: black")
              i or    
            .form-group
              .input-group
                span.input-group-addon
                  i.fa.fa-user
                input#email.form-control(type='email', placeholder='email' name='email' required ='required' value=email)
            .form-group
              .input-group
                span.input-group-addon
                  i.fa.fa-lock
                input#pw.form-control(type='password', placeholder='password' name='password' required ='required')
            .form-group
              button.btn.btn-success.btn-block.login-btn(type='submit') Login
            .clearfix
              label.pull-left.checkbox-inline
                input(type='checkbox')
                |  Remember me
              a.pull-right.text-success(href='#') Forgot Password?
          .hint-text.small
            | Don't have an account? 
            a.text-success(href='#') Register Now!